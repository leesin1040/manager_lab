{
  "manifest_version": 3,
  "name": "Element Selector",
  "version": "1.0",
  "description": "웹 페이지에서 요소를 선택하고 텍스트를 복사하는 도구",
  "permissions": ["activeTab", "scripting", "clipboardWrite"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
