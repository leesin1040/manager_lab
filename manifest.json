{
  "manifest_version": 3,
  "name": "매니저랩",
  "version": "1.0",
  "description": "ZEP 사용자 목록을 텍스트로 복사하는 도구",
  "permissions": ["activeTab", "scripting", "clipboardWrite", "webNavigation"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
